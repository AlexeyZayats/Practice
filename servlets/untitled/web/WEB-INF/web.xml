<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>helloworldservlet</servlet-name>
        <servlet-class>com.bsu.WelcomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>statusservlet</servlet-name>
        <servlet-class>com.bsu.StatusServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>getnameservlet</servlet-name>
        <servlet-class>com.bsu.getNameServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>pageservlet</servlet-name>
        <servlet-class>com.bsu.PageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>checkservlet</servlet-name>
        <servlet-class>com.bsu.CheckServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>test1servlet</servlet-name>
        <servlet-class>com.bsu.test1Servlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>test2servlet</servlet-name>
        <servlet-class>com.bsu.test2Servlet</servlet-class>
    </servlet>

    <filter>
        <filter-name>timeFilter</filter-name>
        <filter-class>com.bsu.TimeMeasurementFilter</filter-class>
    </filter>

    <servlet-mapping>
        <servlet-name>helloworldservlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>statusservlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>getnameservlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>pageservlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>checkservlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>test1servlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>test2servlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>timeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>